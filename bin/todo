#!/usr/bin/env bash

today_date=$(date +'%d-%m-%Y')
yesterday_date=$(date -v '-1d' '+%d-%m-%Y')

echo $yesterday_date

if [ -e ~/notes/todo/${today_date}.txt ]
then

    vim ~/notes/todo/$today_date.txt

else

    if [ -e ~/notes/todo/${yesterday_date}.txt ]
    then

        yesterday_todo=$(awk 'f { if (/TODO END/){
                        printf "%s", buf; f = 0; buf=""
                    } else
                        buf = buf $0 ORS
                 }
               /TODO BEGIN/ { f = 1 }' ~/notes/todo/$yesterday_date.txt) 

    else
        echo "No Todo List Yesterday"
        yesterday_todo=""
    fi



    echo "
${today_date} : AGENDA

====== DAILY HABITS ======
- Exercise
- 100 Push ups
- Leetcode Problem
- 1 Gallon of Water
- Read
==========================



====== HIGHLIGHT OF THE DAY ======  

==================================



====== TODO BEGIN ======
${yesterday_todo}
====== TODO END ======

FINISHED TODO:
    - 
    -

" > ~/notes/todo/$today_date.txt

    vim ~/notes/todo/$today_date.txt
fi





